<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
    <Appenders>
        <KafkaLogAppender name="KafkaAppender" bootstrapServers="localhost:9092" topic="firstTopic">
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss} %-5level %logger{36} - %msg%n"/>
        </KafkaLogAppender>
    </Appenders>
    <Loggers>
        <Root level="info">
            <AppenderRef ref="KafkaAppender"/>
        </Root>
    </Loggers>
</Configuration>
